{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "F1 Dashboard",
  "version": "0.1.0",
  "identifier": "com.ymac.dash-backend",
  "build": {
    "beforeDevCommand": "cd ../dash-frontend && npm run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "cd ../dash-frontend && npm run build",
    "frontendDist": "../dash-frontend/dist"
  },
  "app": {
    "windows": [
      {
        "title": "F1 Dashboard",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
